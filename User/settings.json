{
  //
  // VIM [START]
  // ============
  "vim.leader": ",",
  "vim.cmdLineInitialColon": true,

  "vim.otherModesKeyBindingsNonRecursive": [
    // Open line above/below, and retain mode (normal mode)
    {
      "before": ["leader", "O"],
      "after": ["O", "<Esc>"]
    },
    {
      "before": ["leader", "o"],
      "after": ["o", "<Esc>"]
    }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    // ',,' to <Esc> during insert mode
    {
      "before": [",", ","],
      "after": ["<Esc>"]
    },

    // Open line above/below, and retain mode (insert mode)
    {
      "before": ["leader", "O"],
      "after": ["<Esc>", "O"]
    },
    {
      "before": ["leader", "o"],
      "after": ["<Esc>", "o"]
    },

    // insert mode movements
    {
      "before": ["<c-h>"],
      "after": ["<left>"]
    },
    {
      "before": ["<c-l>"],
      "after": ["<right>"]
    },
    {
      "before": ["<c-j>"],
      "after": ["<down>"]
    },
    {
      "before": ["<c-k>"],
      "after": ["<up>"]
    }
  ],
  // VIM [END]
  // ^^^^^^^^^^^^^^^^^^^^^


  //
  // Open in vim
  // ============
  "open-in-vim.openMethod": "macos.macvim",


  //
